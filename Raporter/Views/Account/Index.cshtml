
@{
    Layout = null;
}

@model Raporter.ViewModels.AccountViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
   
    @using (Html.BeginForm("Login", "Account"))
    {
        @ViewBag.Error
    <table cellpadding="2" cellspacing="2">
        <tr>
            <td>@Html.LabelFor(Model => Model.uzytkownik.Login) </td>
            <td>
                @Html.TextBoxFor(model => model.uzytkownik.Login)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.uzytkownik.Haslo)</td>
            <td>
                @Html.PasswordFor(model => model.uzytkownik.Haslo)
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>
                <input type="submit" value="Login" />
            </td>
        </tr>

    </table>
    }

</body>
</html>
