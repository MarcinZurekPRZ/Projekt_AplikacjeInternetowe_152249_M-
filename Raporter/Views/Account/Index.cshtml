@model Raporter.ViewModels.AccountViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,height=device-height" />
    <link rel="stylesheet" href="~/Content/mainSite.css" />
    <link rel="stylesheet" href="~/Content/createRap.css" />
    <title>Login</title>

</head>
<body>
    <div style="margin: 0 auto; max-width: 600px; max-height: 225px;">
        <img src="~/Content/LogoReporter.png" style="width:100%; height: 100%; margin:0 auto;" />
    </div>


    @using (Html.BeginForm("Login", "Account"))
    {

        <div class="center">

            <p style="color: darkred; text-align: center; ">@ViewBag.Error</p>
            <p style="color: green; text-align: center; ">@ViewBag.SuccessMessage</p>

            <table cellpadding="2" cellspacing="2">
                <tr>
                    <td>@Html.LabelFor(Model => Model.uzytkownik.Login) </td>
                    <td>
                        @Html.TextBoxFor(model => model.uzytkownik.Login)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(Model => Model.uzytkownik.Haslo)</td>
                    <td>
                        @Html.PasswordFor(model => model.uzytkownik.Haslo)
                    </td>
                </tr>
                <tr>
                    
                </tr>

            </table>
            
         <input class="buttonCreate" type="submit" value="Login"/>
                    
        </div>

    }

</body>
</html>
