@model Raporter.Models.Uzytkownicy

@{
    ViewBag.Title = "CreateRap";
}

<!DOCTYPE html>


<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/createRap.css" />
    <link rel="stylesheet" href="~/Content/buttonsRed.css" />
    <title>Create</title>
</head>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="center">
            <div class="content">
                <h3>Dodanie użytkownika</h3>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="createRapInput">
                    <p>@Html.LabelFor(model => model.Imie, htmlAttributes: new { @class = "control-label col-md-2" })</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Imie, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.Imie, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="createRapInput">
                    <p>@Html.LabelFor(model => model.Nazwisko, htmlAttributes: new { @class = "control-label col-md-2" })</p>
