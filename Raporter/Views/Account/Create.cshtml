                        @Html.EditorFor(model => model.Nazwisko, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.Nazwisko, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="createRapInput">
                    <p>@Html.LabelFor(model => model.OddzialyID, "OddzialyID", htmlAttributes: new { @class = "control-label col-md-2" })</p>
                    <div class="col-md-10">
                        @Html.DropDownList("OddzialyID", null, htmlAttributes: new { @class = "form-control" })
                        <br />
                        @Html.ValidationMessageFor(model => model.OddzialyID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="createRapInput">
                    <p>@Html.LabelFor(model => model.FunkcjeID, htmlAttributes: new { @class = "control-label col-md-2" })</p>
                    <div class="col-md-10">
                        @Html.DropDownList("FunkcjeID", null, htmlAttributes: new { @class = "form-control" })
                        <br />
                        @Html.ValidationMessageFor(model => model.FunkcjeID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="createRapInput">
                    <p>@Html.LabelFor(model => model.Haslo, htmlAttributes: new { @class = "control-label col-md-2" })</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Haslo, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.Haslo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="createRapInput">
                    <p>@Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Utwórz" class="buttonCreate" />
                </div>
            </div>

        </div>
     }

     <div>
          @Html.ActionLink(linkText: "Powrót do listy", actionName: (string)@Session["TypWidoku"], controllerName: "UserRaportsView", routeValues: null, htmlAttributes: new { @class = "button marginForHeaderButtons" })

     </div>
        

