@model IEnumerable<Raporter.ViewModels.RaportsAdmViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewRap</title>
    <link rel="stylesheet" href="~/Content/TabeleSzablon_Raporty.css" />
    <link rel="stylesheet" href="~/Content/buttonsRed.css" />
    @Styles.Render("~/Content/css")
</head>
<body>

    <div class="center">
        <div class="blockMenu">

            @Html.ActionLink("Dodaj raport", "Create", null, new { @class = "button" })

            @if (((string)@Session["TypWidoku"] == ("ViewRap_Adm")))
            {

                @Html.ActionLink(linkText: "Dodaj użytkownika", actionName: "Create", controllerName: "Account", routeValues: null, htmlAttributes: new { @class = "button" })
                @Html.ActionLink(linkText: "Wyświetl użytkowników", actionName: "ViewUrz", controllerName: "Account", routeValues: null, htmlAttributes: new { @class = "button" })


            }
            else
            {
            }

        </div>


        <div class="blockMenu1">

            @Html.ActionLink(linkText: "Wyloguj", actionName: "Logout", controllerName: "Account", routeValues: null, htmlAttributes: new { @class = "button buttonLogout" })

        </div>


    </div>

    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.uzytkownik.Imie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.uzytkownik.Nazwisko)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.uzytkownik.Login)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.oddzial.NazwaOddzialu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.funkcja.NazwaFunkcji)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.raport.DataRaportu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.raport.Temat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.raport.Tresc)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.uzytkownik.Imie)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.uzytkownik.Nazwisko)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.uzytkownik.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.oddzial.NazwaOddzialu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.funkcja.NazwaFunkcji)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.raport.DataRaportu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.raport.Temat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.raport.Tresc)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.raport.RaportyID }) |
                        @Html.ActionLink("Usuń", "Delete", new { id = item.raport.RaportyID })
                    </td>
                </tr>
            }

        </table>

    </div>
</body>
</html>

