@model Raporter.Models.Raporty

@{
    ViewBag.Title = "EditRap";
}

<!DOCTYPE html>


<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/createRap.css" />
    <link rel="stylesheet" href="~/Content/buttonsRed.css" />
    <link rel="stylesheet" href="~/Content/ValidationAlert.css" />
</head>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="center">
            <div class="content">
                <h3>Edycja raportu</h3>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.RaportyID)

                <div class="createRapInput">
                    <p>@Html.LabelFor(model => model.DataRaportu, htmlAttributes: new { @class = "control-label col-md-2" })</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataRaportu, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.DataRaportu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="createRapInput">
                    <p>@Html.LabelFor(model => model.Temat, htmlAttributes: new { @class = "control-label col-md-2" })</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Temat, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.Temat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="createRapInput">
                    <p>@Html.LabelFor(model => model.Tresc, htmlAttributes: new { @class = "control-label col-md-2" })</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Tresc, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(model => model.Tresc, "", new { @class = "text-danger" })
                    </div>
                </div>



                @if (((string)@Session["TypWidoku"] == ("ViewRap_Adm")))
                {
                    <div class="createRapInput">
                        <p>@Html.LabelFor(model => model.UzytkownicyID, "Login", htmlAttributes: new { @class = "control-label col-md-2" })</p>
                        <div class="col-md-10">
                            @Html.DropDownList("UzytkownicyID", null, htmlAttributes: new { @class = "form-control" })
                            <br />
                            @Html.ValidationMessageFor(model => model.UzytkownicyID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }
                else
                {
                }

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input class="buttonCreate" type="submit" value="Zapisz" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Powrót do listy", (string)@Session["TypWidoku"], null, new { @class = "button marginForHeaderButtons" })
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}