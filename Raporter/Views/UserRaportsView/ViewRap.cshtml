@model IEnumerable<Raporter.Models.Raporty>

@{
    //ViewBag.Title = "Index";
    Layout = null;
    //~/ Views / Shared / _Layout.cshtml
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewRap</title>
    <link rel="stylesheet" href="~/Content/TabeleSzablon_Raporty.css" />
    <link rel="stylesheet" href="~/Content/buttonsRed.css" />
    @Styles.Render("~/Content/css")
</head>
<body>

    <div class="center">
        <div class="blockMenu">

            @Html.ActionLink("Dodaj raport", "Create", null, new { @class = "button" })

        </div>
        <div class="blockMenu">

            @Html.ActionLink(linkText: "Wyloguj", actionName: "Logout", controllerName: "Account", routeValues: null, htmlAttributes: new { @class = "button buttonLogout" })

        </div>    

    </div>

    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Uzytkownicy.Imie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Uzytkownicy.Nazwisko)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataRaportu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Temat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tresc)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Uzytkownicy.Imie)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.Uzytkownicy.Nazwisko)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataRaportu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Temat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tresc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.RaportyID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.RaportyID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.RaportyID })
                    </td>
                </tr>
            }

        </table>

    </div>
</body>
</html>
